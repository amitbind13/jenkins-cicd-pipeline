pipeline {
    agent any

    triggers {
        // This triggers the pipeline on every commit to the 'main' branch
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Insert build commands here
                echo 'Building project...'
                // Example: sh './build-script.sh'
            }
        }

        stage('Test') {
            steps {
                // Insert testing commands here
                echo 'Running tests...'
                // Example: sh './run-tests.sh'
            }
        }

        stage('Deploy') {
            steps {
                // Insert deployment commands here
                echo 'Deploying project...'
                // Example: sh './deploy.sh'
            }
        }
    }
}
